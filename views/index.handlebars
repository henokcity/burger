<div class="container">

    <div class="jumbotron">
        <h1 class="display-4 text-center">Eat-Da-Burger!</h1>
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="burger"><h4>Place order here:</h4></label>
              <input type="text" class="form-control" id="burgerToGo" placeholder="">
            </div>
            <button class="btn" type="submit">Place order</button>
          </form>
        </div>

        <div class="row mt-4">
            <div class="col-md-6 mt-4">
                <div class="card">
                    <div class="card-header text-white">
                      <h4>Burgers</h4>
                    </div>
                    <div class="card-body">
                          {{#each burgers}}
                            {{#unless devoured}}
                              {{> burgers/burger-block devour=false}}
                            {{/unless}}
                          {{/each}}
                    </div>
                  </div>
                </div>
            
                <div class="col-md-6 mt-4">
                  <div class="card">
                    <div class="card-header">
                      <h4>Devoured burgers</h4> 
                    </div>
                    <div class="card-body">
                      {{#each burgers}}
                          {{#if devoured}}
                            {{> burgers/burger-devoured devour=true}}
                          {{/if}}
                      {{/each}}
                    </div>
                </div>
            </div>
        </div>
  </div>
</div>